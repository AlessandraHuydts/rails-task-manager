<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
    <%= link_to task.title , task_path(task.id)  %>
    <%=  link_to '-->Edit Task', edit_task_path(task.id)  %>
     <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to 'Add a new task' , new_task_path  %>






